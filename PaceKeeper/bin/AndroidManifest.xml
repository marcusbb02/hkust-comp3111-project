<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.comp3111.pacekeeper"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.comp3111.pacekeeper.MainActivity"
            android:label="@string/app_name"
      		android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.PedoActivity"
            android:label="@string/title_activity_pedo"
        	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.MusicActivity"
            android:label="@string/title_activity_music"
        	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.GoalActivity"
            android:label="@string/title_activity_goal"
        	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.SocialActivity"
            android:label="@string/title_activity_social"
        	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.StatActivity"
            android:label="@string/title_activity_stat"
        	android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.comp3111.pacekeeper.CalibrateActivity"
            android:label="@string/title_activity_calibrate"
        	android:screenOrientation="portrait" >
        </activity>
    </application>

</manifest>
