<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/p_ach_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/f_stat_scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
		    android:paddingBottom="@dimen/activity_vertical_margin"
		    android:paddingLeft="@dimen/activity_horizontal_margin"
		    android:paddingRight="@dimen/activity_horizontal_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/f_stat_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:text="Total statistics"
                android:textColor="#555555"
                android:textSize="20dp"
                android:textStyle="italic" />

        <TextView
            android:id="@+id/f_stat_all_records"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:text="All records"
            android:textColor="#555555"
            android:textSize="20dp"
            android:textStyle="italic" />

            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />
            <include
                android:layout_width="match_parent"
                android:layout_height="80dp"
                layout="@layout/item_picture_block" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>