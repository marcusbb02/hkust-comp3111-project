<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/color_red"
    tools:context=".PedoActivity" >
    
    <LinearLayout
        style="@style/nowCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/mus_player_buttons" >

        <Button
            android:visibility="invisible"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Drag" />

        <Button
            android:id="@+id/mus_btn_pedo_start"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Play" />

        <Button
            android:id="@+id/mus_btn_pedo_stop"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stop" />

    </LinearLayout>
    
	<RelativeLayout
	    android:layout_below="@id/mus_player_buttons"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:paddingBottom="@dimen/activity_vertical_margin"
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" >
	    <LinearLayout
	        style="@style/nowCardStyle"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:id="@+id/buttons_two" >
	
	        <Button
	            android:id="@+id/mus_btn_rampup"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Ramp Up" />
	        <Button
	            android:id="@+id/mus_btn_rampnormal"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Normal Pace" />
	        <Button
	            android:id="@+id/mus_btn_rampdown"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:text="Ramp Down" />
	        
	    </LinearLayout>
	
	    <TextView
	        android:id="@+id/tw_pedo_gf"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/buttons_two"
	        android:layout_centerHorizontal="true"
	        android:text="TextView" />    
	
	    <TextView
	        android:id="@+id/tw_pedo_steps"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tw_pedo_gf"
	        android:layout_centerHorizontal="true"
	        android:text="TextView" />
	
	    <TextView
	        android:id="@+id/tw_pedo_av_duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/tw_pedo_steps"
	        android:layout_centerHorizontal="true"
	        android:text="TextVie2w" />
	
	    <LinearLayout
	        style="@style/nowCardStyle"
	        android:id="@+id/chart_container"
	        android:layout_width="wrap_content"
	        android:layout_height="150dp"
	        android:orientation="horizontal"
	        android:layout_below="@id/tw_pedo_av_duration" >        
	    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>