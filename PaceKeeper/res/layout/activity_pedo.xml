<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mus_btn_trigger"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".PedoActivity" >

    <LinearLayout
        android:id="@+id/buttons_two"
        style="@style/nowCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_selector"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin" >

        <ImageView
            android:id="@+id/mus_btn_rampup"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_circle_green"
            android:text="Up"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mus_btn_filler"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_circle_dot"
            android:text="Up"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mus_btn_rampnormal"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_circle_man"
            android:text="Up"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mus_btn_filler2"
            android:layout_width="32dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_circle_dot"
            android:text="Up"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/mus_btn_rampdown"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_circle_red"
            android:text="Up"
            android:visibility="visible" />
    </LinearLayout>

    <TextView
        android:id="@+id/tw_pedo_gf"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/buttons_two"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tw_pedo_steps"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/tw_pedo_gf"
        android:layout_centerHorizontal="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/tw_pedo_av_duration"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@+id/tw_pedo_steps"
        android:layout_centerHorizontal="true"
        android:text="TextVie2w" />

    <LinearLayout
        android:id="@+id/chart_container"
        style="@style/nowCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tw_pedo_av_duration"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>