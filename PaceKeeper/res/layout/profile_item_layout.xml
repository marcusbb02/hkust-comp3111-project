<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/p_bg"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:layout_alignLeft="@+id/onclick_bg"
        android:layout_alignRight="@+id/onclick_bg"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@drawable/card_background_filled_old" />

    <ImageView
        android:id="@+id/onclick_bg"
        android:layout_width="70dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:alpha="0.8" 
        android:src="@drawable/blue_back" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/apply_icon"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/apply_icon"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/p_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/p_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.63"
            android:text="TextView"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ImageView02"
        android:layout_width="70dp"
        android:layout_height="6dp"
        android:layout_alignLeft="@+id/onclick_bg"
        android:layout_below="@+id/onclick_bg"
        android:scaleType="centerCrop"
        android:src="@drawable/blue_back"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/apply_icon"
        android:layout_width="55dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/onclick_bg"
        android:layout_alignTop="@+id/onclick_bg"
        android:src="@drawable/ic_circle_man" />

    <ImageButton
        android:id="@+id/edit_btn"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignRight="@+id/p_bg"
        android:layout_alignTop="@+id/linearLayout1"
        android:layout_marginTop="3dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/edit" />

</RelativeLayout>