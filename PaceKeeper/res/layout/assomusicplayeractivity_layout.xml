<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="71dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/assoplayer_back"
            style="?android:borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2"
            android:src="@drawable/ic_action_goback" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="6dip"
            android:layout_marginBottom="0dip"
            android:layout_marginTop="5dip"
            android:layout_weight="5"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/assoplayer_artist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Artist"
                android:textColor="#666666"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/assoplayer_song_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Title"
                android:textColor="#666666"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/assoplayer_album"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="middle"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="Album"
                android:textColor="#666666"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.2" >
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/assoplayer_showalbumart"
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:scaleType="fitXY" />

    <ListView
        android:id="@+id/assoplayer_playlist"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:background="#ffe3a0"
        android:divider="@null"
        android:dividerHeight="0dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/assoplayer_shuffle"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.2"
                android:src="@drawable/ic_action_shuffle1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginBottom="3dip"
                android:layout_marginTop="4dip"
                android:layout_weight="5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/assoplayer_prevSongDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:gravity="center_horizontal"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Previous Song"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/assoplayer_nextSongDescription"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="middle"
                    android:gravity="center_horizontal"
                    android:singleLine="true"
                    android:text="Next Song"
                    android:textColor="#666666" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/assoplayer_repeat"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.1"
                android:src="@drawable/ic_action_repeat_a" />
        </LinearLayout>

        <SeekBar
            android:id="@+id/assoplayer_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="dp"
            android:layout_weight="1.2"
            android:max="100"
    		android:progressDrawable="@drawable/scrubber_progress"
            android:thumb="@null" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageButton
                android:id="@+id/assoplayer_prev"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_action_previous" />

            <ImageButton
                android:id="@+id/assoplayer_play"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_action_play" />

            <ImageButton
                android:id="@+id/assoplayer_next"
                style="?android:borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_action_next" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>