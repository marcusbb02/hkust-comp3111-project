<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PedoActivity" >
    
    <LinearLayout
        android:id="@+id/pedo_left_container"
        style="@style/nowCardStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical" >

	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="90dp"
	        android:orientation="horizontal" >
	        
		    <include
		        android:id="@+id/pedo_left_cell1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        layout="@layout/activity_pedo_left_block_light_blue" />

		    <include
		        android:id="@+id/pedo_left_cell2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        layout="@layout/activity_pedo_left_block_light_purple" />

		</LinearLayout>
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="90dp"
	        android:orientation="horizontal" >
	        
		    <include
		        android:id="@+id/pedo_left_cell3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        layout="@layout/activity_pedo_left_block_light_green" />

		    <include
		        android:id="@+id/pedo_left_cell4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        layout="@layout/activity_pedo_left_block_light_orange" />
		    
		    <include
		        android:id="@+id/pedo_left_cell5"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        layout="@layout/activity_pedo_left_block_light_red" />

		</LinearLayout>
    </LinearLayout>
</RelativeLayout>