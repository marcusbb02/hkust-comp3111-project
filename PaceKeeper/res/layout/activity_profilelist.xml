<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Select the profile you want to apply:"
        android:textColor="#333333"
        android:textSize="21dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="Long press the item to change the colour"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/pro_list"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0.41"
        android:choiceMode="singleChoice"
        android:divider="#555555"
        android:dividerHeight="0px"
        android:layoutAnimation="@anim/list_anim_layout"
        android:scrollingCache="true" >
    </ListView>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/add_profile_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/ic_action_new"
            android:text="Add" />

        <Button
            android:id="@+id/del_profile_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Del" />
    </RelativeLayout>

</LinearLayout>