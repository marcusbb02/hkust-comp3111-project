<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rm"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAAA"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:text="Select the profile you want to apply:"
        android:textColor="#333333"
        android:textSize="21dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/textView_p1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:text="Long press the item can change the colour"
        android:textColor="#333333"
        android:textSize="16sp"
        android:textStyle="italic" />

    <ListView
        android:id="@+id/pro_list"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="12dp"
        android:layout_weight="0.41"
        android:background="#FFFFFF"
        android:choiceMode="singleChoice"
        android:divider="#555555"
        android:dividerHeight="1px"
      android:layoutAnimation="@anim/list_anim_layout"
        android:scrollingCache="true" >

    </ListView>

    <RelativeLayout
        android:id="@+id/RelativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_gravity="right"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/add_profile_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="left"
            android:text="Add" />

        <Button
            android:id="@+id/apply_profile_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="194dp"
            android:layout_height="61dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/del_profile_btn"
            android:layout_toRightOf="@+id/add_profile_btn"
            android:text="Apply" />

        <Button
            android:id="@+id/del_profile_btn"
            style="?android:borderlessButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="Del" />
    </RelativeLayout>

</LinearLayout>